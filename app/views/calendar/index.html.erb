<div class='row container'>
  <div class='span9'>
    <section id='calendar'>
      <table>
        <caption>
          <h3><%= @calendar.current_month %></h3>
        </caption>
        <thead>
          <tr>
            <th>Sunday</th>
            <th>Monday</th>
            <th>Tuesday</th>
            <th>Wednesday</th>
            <th>Thursday</th>
            <th>Friday</th>
            <th>Saturday</th>
          </tr>
        </thead>
        <% @calendar.dates.each_slice(7) do |week| %>
          <tr class='week'>
            <% week.each do |day| %>
              <td class='day'>
                <div class=<%= day.date.today? ? 'today' : 'date' %>>
                  <%= day.date.mday %>
                </div>
                <ul>
                  <% day.courses.each do |course| %>
                    <li class='course'>
                      <% if course.end_date > day %>
                        <%= link_to course.name %> 
                      <% end %>>
                    </li>
                  <% end %>
                </ul>
              </td>
            <% end %>
          </tr>
        <% end %>
      </table>
    </section>
  </div>
</div>
