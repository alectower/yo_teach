<ul class='unstyled courses'>
  <% lessons.each do |lesson| %>
    <li class='course'>
      <%= link_to lesson.course.name,
        edit_lesson_plan_path(lesson),
        class: "status-underline#{lesson.status}" %>
      <span class='time'>
        <%= lesson.start_time %>
      </span>
    </li>
  <% end %>
</ul>
