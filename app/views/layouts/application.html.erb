<!DOCTYPE html>
<html>
<head>
	<title>Yo Teach</title>
	<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	<%= csrf_meta_tags %>
</head>
<body>
	<%= render 'layouts/nav' %>	
	
	<nav class='site-nav nav nav-pills offset1'>
    <li class="<%= 'active' if params[:controller] == 'calendar' %>"><a href="/">Calendar</a></li>
    <li class="<%= 'active' if params[:controller] == 'courses' %>"><a href="/courses">Courses</a></li>
    <li class="<%= 'active' if params[:controller] == 'lesson_plans' %>"><a href="/lesson_plans">Lesson Plans</a></li>
  </nav>

	<div class='container-fluid'>  
		<div id='messages'>
    		<ul></ul>
 	 	</div>
	  	
    <div class='row'>
      <div class='main span8'>
        <%= yield %>
      </div>
      <div class='span4'>
        <%= render 'layouts/to_do_list' %>
      </div>
    </div>

	</div>

	<div id="dialog" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="dialogModalHeader" aria-hidden="true">
		<div class="modal-header">
	    	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
	    	<h3 id="dialogModalHeader"></h3>
	  	</div>
	  	<div id='dialog-body' class="modal-body"></div>
	  	<div class="modal-footer">
	    	<button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
	    	<button id='submit' class="btn btn-primary">Create</button>
	    </div>
	</div>

  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
</body>
</html>
