<!DOCTYPE HTML>
<html>
  <head>
    <%= stylesheet_link_tag 'application', media: 'print' %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script>$(window.print());</script>
  </head>
  <body class='print'>
    <h2 class='text-center'><%= @lesson_plan.title %></h2>
    <div>
      <p>
        <strong>Course:</strong>
        <%= @lesson_plan.course %>
      </p>
    </div>
    <div>
      <p>
        <strong>Date:</strong>
        <%= @lesson_plan.start.strftime "%A, %B %e, %Y" %>
      </p>
    </div>
    <div>
      <p>
        <strong>Time:</strong>
        <%= @lesson_plan.start.strftime "%l:%M%p" %> -
        <%= @lesson_plan.end.strftime "%l:%M%p" %>
      </p>
      <p>&nbsp;</p>
    </div>
    <div>
      <p>
        <strong>Lesson Plan:</strong>
        <%= @lesson_plan.body.html_safe %>
      </p>
    </div>
    <div>
      <strong>Standards:</strong>
      <p></p>
    </div>
    <% @lesson_plan.core_standards.each do |s| %>
      <div>
        <p>
          <%= s.dot_notation %>
          <br/>
          <%= s.uri %>
          <br/>
          <%= s.description.html_safe %>
        </p>
      </div>
    <% end %>
  </body>
</html>
