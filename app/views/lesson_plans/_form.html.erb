<h3>New Lesson Plan</h3>

<%= bootstrap_form_for @lesson_plan do |f| %>

	<%= f.collection_select :course_id, Course.all, :id, :name, prepend: 'icon-book' %>

	<%= f.text_field :description, prepend: 'icon-list-alt' %>

	<%= f.datetime_local_field :start_time, prepend: 'icon-time' %>

	<%= f.datetime_local_field :end_time, prepend: 'icon-time' %>

	<div class="control-group">
	    <div class="controls">
				<%= f.submit 'Create Lesson Plan', class: 'btn btn-primary' %>
				<%= link_to 'Cancel', lesson_plans_path, class: 'btn' %>
	    </div>
	</div>

<% end %>
