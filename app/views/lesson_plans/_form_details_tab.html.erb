<div id='details-tab' class='tab-pane active'>
  <%= lesson_plan_form.collection_select :course_id,
    current_user.courses.sort, :id, :name_with_date,
    prepend: 'icon-book' %>

  <%= lesson_plan_form.text_field :title,
    prepend: 'icon-list-alt',
    label: { text: 'Lesson Title' } %>

  <%= lesson_plan_form.datetime_local_field :start,
    prepend: 'icon-time' %>

  <%= lesson_plan_form.datetime_local_field :end,
    prepend: 'icon-time' %>
</div>

