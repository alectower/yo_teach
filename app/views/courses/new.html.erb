<%= form_for @course, :html => {:class => 'form-horizontal'} do |f| %>

	<%= form_field(f, :name, 'icon-book') %>

	<%= form_field(f,:start_date, 'icon-calendar') %>

	<%= form_field(f, :end_date, 'icon-calendar') %>

	<%= form_field(f, :start_time, 'icon-time') %>

	<%= form_field(f, :end_time, 'icon-time') %>

	<div class="control-group">
	    <div class="controls">
			<%= f.submit 'Create' %>
	    </div>
	</div>

<% end %>
