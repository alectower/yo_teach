<div>
  <h2>Courses</h2>
    <i class='icon-plus' ></i>&nbsp;<%= link_to 'New Course', new_course_path %>
</div>
<br/>
<table class='table'>
    <col width="33.3%"/>
    <col width="33.3%"/>
    <col width="33.3%"/>
    <thead>
      <tr>
        <th>Course</th>
        <th>Start Date</th>
        <th>End Date</th>
      </tr>
    </thead>
</table>
<div class='table-container'>
  <table class='table table-hover table-striped'>
    <col width="33.3%"/>
    <col width="33.3%"/>
    <col width="33.3%"/>
    <% @courses.each do |course| %>
      <tr>
        <td>
          <%= link_to course.name,
            edit_course_path(course) %>
        </td>
        <td><%= course.start_date %></td>
        <td><%= course.end_date %></td>
      </tr>
    <% end %>
  </table>
</div>
