<h1>Sign In</h1>

<%= simple_form_for :sign_in, url: sessions_path do |f| %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= submit_tag 'Sign In', class: 'btn btn-primary' %>
<% end %>

<p>
  Don't have an account?
  <%= link_to 'Sign up', new_user_path %>
</p>

<p>
  Forgot password?
  <%= link_to 'Reset password', new_password_reset_path %>
</p>
